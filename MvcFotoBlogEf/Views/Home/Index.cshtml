@model List<Gonderi>
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center baslik">Boostagram</h1>

<div class="gonderiler">
    @if (Context.Request.Query["Sonuc"] == "Eklendi")
    {
        <div class="alert alert-success">
            Gönderi başarıyla oluşturuldu.
        </div>
    }

    @if (Context.Request.Query["Sonuc"] == "Silindi")
    {
        <div class="alert alert-warning">
            Gönderi başarıyla kaldırıldı.
        </div>
    }

    @if (Context.Request.Query["Sonuc"] == "Duzenlendi")
    {
        <div class="alert alert-primary">
            Gönderi başarıyla güncellendi.
        </div>
    }


    <div class="d-flex">
        <a class="btn btn-success ms-auto mb-4" asp-controller="Gonderiler" asp-action="Yeni">Yeni Gönderi</a>
    </div>

    @foreach (Gonderi a in Model)
    {
        <div class="mb-4">
            <div class="card" style="box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;">
                <div class="card-body">
                    <div class="card-title"> <h4 class="card-title">@a.Baslik</h4></div>
                </div>
                <img class="w-100 card-img-bottom" src="~/img/upload/@a.Resim" alt="@a.Resim" />
                <div class="ms-auto mt-2 p-2">
                    <a asp-controller="Gonderiler" asp-action="Guncelle" asp-route-id="@a.Id" class="btn btn-outline-warning">Düzenle</a>
                    <a asp-controller="Gonderiler" asp-action="Sil" asp-route-id="@a.Id" class="btn btn-outline-danger">Sil</a>
                </div>
            </div>
        </div>


    }
</div>
